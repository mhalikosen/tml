{
  "name": "tml-engine",
  "version": "0.3.0",
  "description": "Template Markup Language â€” Vue SFC-inspired, server-side template engine with component system",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./express": {
      "types": "./dist/express.d.ts",
      "default": "./dist/express.js"
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "dev": "node --watch example/app.ts",
    "example": "node example/app.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npx biome check --write src/"
  },
  "keywords": [
    "template-engine",
    "server-side-rendering",
    "ssr",
    "components",
    "express",
    "vue-sfc",
    "html-template"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhalikosen/tml.git"
  },
  "homepage": "https://github.com/mhalikosen/tml#readme",
  "bugs": {
    "url": "https://github.com/mhalikosen/tml/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "peerDependencies": {
    "express": ">=4.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "express": "^5.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "esbuild": "^0.27.3"
  }
}
